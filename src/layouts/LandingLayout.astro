---
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";
import { Toaster } from "../components/ui/sonner";

interface Props {
  title?: string;
}

const { title = "HealthyMeal - Adapt Recipes to Your Dietary Needs" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Set your dietary preferences, save your favorite recipes, and let AI automatically adapt them to your needs."
    />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body>
    <header role="banner" class="border-b border-border bg-background">
      <div class="container mx-auto flex items-center justify-between px-4 py-4">
        <a href="/" class="text-xl font-bold text-foreground hover:text-foreground/80 transition-colors">
          HealthyMeal
        </a>
        <nav aria-label="Authentication navigation">
          <ul class="flex items-center gap-4">
            <li>
              <a
                href="/login"
                class="text-sm font-medium text-muted-foreground hover:text-foreground transition-colors"
              >
                Log In
              </a>
            </li>
            <li>
              <a
                href="/register"
                class="inline-flex items-center justify-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground hover:bg-primary/90 transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
              >
                Sign Up
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </header>
    <main id="main-content">
      <slot />
    </main>
    <Toaster client:load />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
