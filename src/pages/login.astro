---
import Layout from "@/layouts/Layout.astro";
import { LoginForm } from "@/components/auth/LoginForm";
import { Logo } from "@/components/navigation/Logo";

// Note: Server-side logic (checking authentication and redirects) will be handled by middleware
// This page focuses on UI presentation only as per task requirements

// Extract returnUrl from query parameters
const returnUrl = Astro.url.searchParams.get("returnUrl") || undefined;
const resetSuccess = Astro.url.searchParams.get("reset") === "success";
---

<Layout title="Log in - HealthyMeal">
  <div class="min-h-screen flex items-center justify-center bg-background px-4 py-12">
    <div class="w-full max-w-md space-y-8">
      <!-- Logo -->
      <div class="flex justify-center">
        <Logo href="/" />
      </div>

      <!-- Card Container -->
      <div class="bg-card border border-border rounded-xl shadow-sm p-8">
        <div class="space-y-6">
          <!-- Header -->
          <div class="text-center space-y-2">
            <h1 class="text-2xl font-bold">Welcome back</h1>
            <p class="text-muted-foreground text-sm">Log in to your account to continue</p>
          </div>

          <!-- Success message for password reset -->
          {
            resetSuccess && (
              <div
                class="rounded-md bg-green-50 dark:bg-green-950/20 border border-green-200 dark:border-green-900/30 p-3 text-sm text-green-800 dark:text-green-200"
                role="status"
                aria-live="polite"
              >
                Your password has been updated successfully. You can now log in with your new password.
              </div>
            )
          }

          <!-- Login Form -->
          <LoginForm client:load returnUrl={returnUrl} />

          <!-- Links -->
          <div class="space-y-4">
            <div class="text-center">
              <a
                href="/reset-password"
                class="text-sm text-primary hover:underline focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 rounded"
              >
                Forgot your password?
              </a>
            </div>

            <div class="relative">
              <div class="absolute inset-0 flex items-center">
                <div class="w-full border-t border-border"></div>
              </div>
              <div class="relative flex justify-center text-sm">
                <span class="px-2 bg-card text-muted-foreground">New to HealthyMeal?</span>
              </div>
            </div>

            <div class="text-center">
              <a
                href="/register"
                class="inline-flex items-center justify-center rounded-md text-sm font-medium h-9 px-4 py-2 border border-input bg-background hover:bg-accent hover:text-accent-foreground transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2"
              >
                Create an account
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
