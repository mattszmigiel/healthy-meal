---
import Layout from "@/layouts/Layout.astro";
import { RegisterForm } from "@/components/auth/RegisterForm";
import { Logo } from "@/components/navigation/Logo";

// Note: Server-side logic (checking authentication and redirects) will be handled by middleware
// This page focuses on UI presentation only as per task requirements
---

<Layout title="Sign up - HealthyMeal">
  <div class="min-h-screen flex items-center justify-center bg-background px-4 py-12">
    <div class="w-full max-w-md space-y-8">
      <!-- Logo -->
      <div class="flex justify-center">
        <Logo href="/" />
      </div>

      <!-- Card Container -->
      <div class="bg-card border border-border rounded-xl shadow-sm p-8">
        <div class="space-y-6">
          <!-- Header -->
          <div class="text-center space-y-2">
            <h1 class="text-2xl font-bold">Create your account</h1>
            <p class="text-muted-foreground text-sm">Start managing your healthy meal recipes</p>
          </div>

          <!-- Register Form -->
          <RegisterForm client:load />

          <!-- Links -->
          <div class="space-y-4">
            <div class="relative">
              <div class="absolute inset-0 flex items-center">
                <div class="w-full border-t border-border"></div>
              </div>
              <div class="relative flex justify-center text-sm">
                <span class="px-2 bg-card text-muted-foreground">Already have an account?</span>
              </div>
            </div>

            <div class="text-center">
              <a
                href="/login"
                class="inline-flex items-center justify-center rounded-md text-sm font-medium h-9 px-4 py-2 border border-input bg-background hover:bg-accent hover:text-accent-foreground transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2"
              >
                Log in
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Terms notice -->
      <p class="text-center text-xs text-muted-foreground">
        By creating an account, you agree to our Terms of Service and Privacy Policy.
      </p>
    </div>
  </div>
</Layout>
