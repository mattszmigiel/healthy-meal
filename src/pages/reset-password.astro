---
import Layout from "@/layouts/Layout.astro";
import { ResetPasswordWrapper } from "@/components/auth/ResetPasswordWrapper";
import { Logo } from "@/components/navigation/Logo";

// Note: Server-side logic (checking authentication and redirects) will be handled by middleware
// This page focuses on UI presentation only as per task requirements

// The mode and token will be detected client-side from the URL hash
// Supabase redirects with format: /reset-password#access_token=XXX&type=recovery
---

<Layout title="Reset password - HealthyMeal">
  <div class="min-h-screen flex items-center justify-center bg-background px-4 py-12">
    <div class="w-full max-w-md space-y-8">
      <!-- Logo -->
      <div class="flex justify-center">
        <Logo href="/" />
      </div>

      <!-- Card Container -->
      <div class="bg-card border border-border rounded-xl shadow-sm p-8">
        <ResetPasswordWrapper client:load />
      </div>
    </div>
  </div>
</Layout>
