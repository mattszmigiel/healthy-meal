---
import Layout from "@/layouts/Layout.astro";
import { SetNewPasswordWrapper } from "@/components/auth/SetNewPasswordWrapper";
import { Logo } from "@/components/navigation/Logo";

// This page is only accessible via recovery link from email
// The recovery code comes in the URL hash: /set-new-password#code=XXX&type=recovery
// Client-side logic will extract the code and show the form
---

<Layout title="Set new password - HealthyMeal">
  <div class="min-h-screen flex items-center justify-center bg-background px-4 py-12">
    <div class="w-full max-w-md space-y-8">
      <!-- Logo -->
      <div class="flex justify-center">
        <Logo href="/" />
      </div>

      <!-- Card Container -->
      <div class="bg-card border border-border rounded-xl shadow-sm p-8">
        <div class="space-y-6">
          <!-- Header -->
          <div class="text-center space-y-2">
            <h1 class="text-2xl font-bold">Set new password</h1>
            <p class="text-muted-foreground text-sm">Enter your new password below</p>
          </div>

          <!-- Form - Wrapper extracts code from URL hash and shows appropriate UI -->
          <SetNewPasswordWrapper client:only="react" />

          <!-- Back to login link -->
          <div class="text-center">
            <a
              href="/login"
              class="text-sm text-muted-foreground hover:text-foreground transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 rounded"
            >
              Back to log in
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
